{
	"compilerOptions": {
		"lib": ["dom", "dom.iterable", "esnext"],
		"allowJs": true,
		"skipLibCheck": true,
		"strict": true,
		"noEmit": true,
		"esModuleInterop": true,
		"module": "esnext",
		"moduleResolution": "bundler",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"jsx": "preserve",
		"baseUrl": "src/",
		"paths": {
			"@/styles/*": ["styles/*"],
			"@/atoms/*": ["core/components/atoms/*"],
			"@/molecules/*": ["core/components/molecules/*"],
			"@/organisms/*": ["core/components/organisms/*"],
			"@/constants/*": ["core/components/constants/*"],
			"@/interfaces/*": ["core/components/interfaces/*"],
			"@/helpers/*": ["core/components/helpers/*"],
			"@/hooks/*": ["core/hooks/*"],
			"@/modules/*": ["modules/*"]
		},
		"incremental": true
	},
	"include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"],
	"exclude": ["node_modules"]
}
